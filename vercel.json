{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "env": {
    "NODE_OPTIONS": "--max-old-space-size=4096",
    "NODE_VERSION": "18.x",
    "BUILD_TIME": "2025-01-28T14:57"
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "build": {
    "env": {
      "KINDE_CLIENT_ID": "@kinde-client-id",
      "KINDE_ISSUER_URL": "@kinde-issuer-url",
      "KINDE_SITE_URL": "@kinde-site-url",
      "KINDE_POST_LOGIN_REDIRECT_URL": "@kinde-post-login-redirect-url",
      "KINDE_POST_LOGOUT_REDIRECT_URL": "@kinde-post-logout-redirect-url"
    }
  }
}
