{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "env": {
    "NODE_OPTIONS": "--max-old-space-size=4096",
    "NODE_VERSION": "18.x",
    "BUILD_TIME": "2025-01-28T14:57"
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "build": {
    "env": {
      "REACT_APP_KINDE_CLIENT_ID": "@react-app-kinde-client-id",
      "REACT_APP_KINDE_DOMAIN": "@react-app-kinde-domain",
      "REACT_APP_KINDE_REDIRECT_URI": "@react-app-kinde-redirect-uri",
      "REACT_APP_KINDE_LOGOUT_URI": "@react-app-kinde-logout-uri"
    }
  }
}
