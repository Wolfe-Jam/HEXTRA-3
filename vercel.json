{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "env": {
    "NODE_OPTIONS": "--max_old_space_size=4096",
    "NODE_VERSION": "18.x"
  },
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
