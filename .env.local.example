# HEXTRA Authentication Environment Variables (v2.2.3)
# Copy this file to .env.local for development use
#
# NOTE: Create React App only exposes variables with REACT_APP_ prefix
# but the Kinde SDK v4.x also works with the non-prefixed versions
# The code now supports both patterns for maximum compatibility

# Standard Kinde SDK v4.x naming
KINDE_CLIENT_ID=your_client_id
KINDE_ISSUER_URL=https://your-domain.kinde.com
KINDE_POST_LOGIN_REDIRECT_URL=http://localhost:3000/callback
KINDE_POST_LOGOUT_REDIRECT_URL=http://localhost:3000

# Create React App naming (legacy support)
REACT_APP_KINDE_CLIENT_ID=your_client_id
REACT_APP_KINDE_DOMAIN=https://your-domain.kinde.com
REACT_APP_KINDE_REDIRECT_URI=http://localhost:3000/callback
REACT_APP_KINDE_LOGOUT_URI=http://localhost:3000

# URLs - Development
REACT_APP_BASE_URL=http://localhost:3000
